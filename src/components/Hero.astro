---
const personalImageAlt = "Alexandre Spindola";
import Badge from "../components/Badge.astro";
import XingIcon from "../components/icons/XingIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
---

<div class="max-w-2xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/alexandre.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/alexandrespindola"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Available to work</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, I'm Alexandre
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-primary [&>strong]:text-secondary [&>strong]:font-semibold dark:text-gray-300"
  >
    <strong> Full Stack Developer & Integration Architect.</strong> Brazilian with
    Spanish citizenship (work permit in the EU), living in Cologne, Germany. Experienced
    in enterprise automation, AI-powered workflows and system integrations using
    modern technologies.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="https://www.xing.com/profile/Alexandre_Spindola">
      <XingIcon class="size-4" />
      Xing
    </SocialPill>
    <SocialPill href="https://github.com/alexandrespindola/">
      <GitHubIcon class="size-4" />
      GitHub
    </SocialPill>
    <SocialPill href="mailto:alexandre.spindola11@gmail.com">
      <MailIcon class="size-4" />
      Contact
    </SocialPill>
  </nav>
</div>

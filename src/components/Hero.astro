---
import Badge from "../components/Badge.astro";
import XingIcon from "../components/icons/XingIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import ResumeIcon from "./icons/ResumeIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
---

<div class="flex gap-4 mb-4 pointer-events-none">
  <Badge>Available to work</Badge>
</div>
<h1
  class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
>
  Hey, I'm Alexandre
</h1>
<div class="hero">
  <p class="green">
    <strong>Software Engineer</strong> & <strong>Automation Specialist</strong> with an MBA and <strong>Google Cloud Certification</strong>. Bridges the gap between technical implementation and business goals using <strong>TypeScript</strong> across <strong>Vue.js (Nuxt)</strong>, <strong>Angular</strong>, and <strong>NestJS</strong>.<br><br>
    Delivers scalable solutions by combining <strong>Cloud Infrastructure</strong> (GCP, Docker) with <strong>Process Automation (n8n)</strong>. Leverages a strong foundation in <strong>Java/Spring Enterprise patterns</strong> to build resilient architectures, ensuring code quality and operational efficiency across the full project lifecycle.
  </p>
</div>

<nav class="flex flex-wrap gap-4 mt-8">
  <SocialPill
    href="https://bucket.spindola.me/cv/20251209_EN-CV-Alexandre-Borges-Spindola-Software-Engineer-Full-Stack-Nest-Angular-GCP-Certified-MBA.pdf"
  >
    <ResumeIcon class="size-4" />
    Resume
  </SocialPill>
  <SocialPill href="https://www.linkedin.com/in/alexspindola">
    <LinkedInIcon class="size-4" />
    LinkedIn
  </SocialPill>
  <SocialPill href="https://www.xing.com/profile/Alexandre_Spindola">
    <XingIcon class="size-4" />
    Xing
  </SocialPill>
  <SocialPill href="https://github.com/alexandrespindola/">
    <GitHubIcon class="size-4" />
    GitHub
  </SocialPill>
  <SocialPill href="mailto:alexandre@spindola.me">
    <MailIcon class="size-4" />
    Contact
  </SocialPill>
</nav>

<style>
  .hero p {
    @apply mt-6 text-xl text-gray-800 [&>strong]:font-semibold dark:text-gray-300;
  }

  .green {
    @apply dark:[&>strong]:text-primary [&>strong]:text-secondary;
  }
</style>
